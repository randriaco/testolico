{% extends 'home.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <h1>Espace Pro</h1>
	
    <section>
        <div class="container">
            <div class="row">

                <div class="mb-3 fondImagePro">
                    <h2 class="text-center mt-5 titre">Connexion</h2>
                </div>
            
                <div class="col-sm-6 signin">

                    <form action="" class="p-5" method="post">

                        <h2>Déjà Client ?</h2>

                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" value="{{ last_username }}" id="email" name="email">
                            <label for="email"><i class="fa fa-envelope mr-3"></i> Email</label>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" name="password" id="password" autocomplete="password" required>
                            <label for="password"><i class="fa-solid fa-lock"></i> Mot de passe</label>
                        </div>
                        
                        <input class="checkbox" type="checkbox" onclick="togglePasswordVisibility('password')">
                        Afficher mot de passe
                        &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                        
                        <a class="ForgotPassBtn" href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>

                         <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        
                        <p class="d-flex justify-content-center">
                            <button class="btn" type="submit">Se Connecter</button>
                        </p>                
                    </form>

                </div> 
            </div>
        </div>

    </section>

{% endblock %}

{% block javascripts %}

	<script>
		function togglePasswordVisibility(inputId) 
		{
			var passwordInput = document.getElementById(inputId);
			if (passwordInput.type === "password") 
			{
				passwordInput.type = "text";
			} 
			else 
			{
				passwordInput.type = "password";
			}
		}
	</script>
	
{% endblock %}