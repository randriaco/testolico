{% block title %}Modifier Date Specifique{% endblock %}

{% block body %}

<div class="container">

   <h1>Modifier la date spécifique</h1>

    {# Affichage des messages flash #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(form) }}

        <div class="card mx-auto text-center mb-3" style="width: 300px;">

            <div class="card-header-admin">
                Date Specifique
            </div>
        
            <div class="card-body mb-3">
                <p class="card-text">
                    <strong>Date </strong>  <br>
                    {{ form_widget(form.date, {'attr': {'class': 'admin-date-input'}}) }} <br>
                    <hr>
                    <strong> Ouverture Matin </strong><br>
                    {{ form_widget(form.ouvertureMatin, {'attr': {'class': 'admin-input'}}) }} <br>
